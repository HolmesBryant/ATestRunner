{
  "name": "a-test-runner",
  "version": "1.0.0",
  "description": "A test runner for ECMAScript and web component modules.",
  "type": "module",
  "main": "ATestRunner.js",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "browser-sync start --server --files \"src/*.*\"",
    "test": "node --test tests/node.tests.js",
    "build": "rollup -c"
  },
  "author": "Holmes Bryant <https://github.com/HolmesBryant>",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-terser": "^0.4.4",
    "rollup": "^4.30.1",
    "browser-sync": "^3.0.4"
  }
}
